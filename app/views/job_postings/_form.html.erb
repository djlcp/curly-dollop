<%= form_with(model: @job_posting, local: true) do |form| %>
  <% if @job_posting.errors.present? %>
    <% @job_posting.errors.full_messages.each do |error| %>
      <p><%= error %></p> 
    <% end %>
  <% end %>
  

  <div>
    <%= form.collection_select :profession_id, Profession.all, :id, :name, {prompt: "Choose a profession" } %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :start_time %>
    <%= form.time_field :start_time %>
  </div>

 <div>
    <%= form.label :end_time %>
    <%= form.time_field :end_time %>
  </div>

 <div>
    <%= form.label :hourly_rate %>
    <%= form.number_field :hourly_rate, step: :any %>
  </div>


  <div>
    <%= form.submit :Submit %>
  </div>

<% end %>