<div class='jumbotron text-center'>
  <% resource.build_employee_profile %>
  <%= form_for(resource, :as => resource_name,
                         :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  <div class='container'>
    <div class='col-md-6 mx-auto text-center'>
      <div class='header-title'>
        <h1 class='wv-heading--title'>
        Sign up
        </h1>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-4 mx-auto'>
        <div class='myform form'>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control my-input' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control my-input' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control my-input' %>
            </div>

            <%= f.fields_for :employee_profile do |employee_profile_form| %>

            <div class="form-group">
              <%= employee_profile_form.collection_select :profession_id, Profession.all, :id, :name, {prompt: "Choose a profession" }, class: 'form-control my-input' %><br />
            </div>

            <div class="form-group">
              <%= employee_profile_form.label :first_name %><br />
              <%= employee_profile_form.text_field :first_name, class: 'form-control my-input' %>
            </div>

            <div class="form-group">
              <%= employee_profile_form.label :last_name %>
              <%= employee_profile_form.text_field :last_name, class: 'form-control my-input' %>
            </div>

            <div>
              <%= f.submit "Sign up", class: 'btn btn-block send-button tx-tfm' %>
            </div>

            <div class="col-md-12 ">
				      <div class="login-or">
					      <hr class="hr-or">
				    </div>
			  </div>
      <% end %>
        <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-block send-button tx-tfm' %><br />
  <% end %>

  <% end %>
</div>