<section>
  <article>
    <div>
      <%= form_with(model: employee_profile, local: true) do |form| %>
        <% if employee_profile.errors.any? %>
          
          <div id="error_explanation">
            <h2><%= pluralize(employee_profile.errors.count, "error") %> prohibited this employee_profile from being saved:</h2>
            <ul>
              <% employee_profile.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>

        <% end %>

        <div class="card__header__profile">
          <div class="card__body">
            <br>
              <% if @employee_profile.avatar.attached? %>
                <%= image_tag(@employee_profile.avatar, :class => "card__image__profile") %>
              <% else %>
                <%= image_tag('default.jpg', :class => "card__image__profile") %>
              <% end %>
            <br>
            <div class="card__body">
              <h5 class="card__title">Profile Picture:</h5>
              <p class="card__content">
                <%= form.file_field :avatar, class: 'form-control-file' %>
              </p>
            </div>
          </div>
          <div class="card__body__profile">
            <h5 class="card__title">Profession:</h5>
              <p class="card__content">
                <%= form.collection_select :profession_id, Profession.all, :id, :name, {prompt: "Choose a profession" }, class: 'form-control' %>
              </p>
            <h5 class="card__title">First Name:</h5>
              <p class="card__content">
                <%= form.text_field :first_name, class: 'form-control' %>
              </p>
            <h5 class="card__title">Last Name:</h5>
              <p class="card__content">
                <%= form.text_field :last_name, class: 'form-control' %>
              </p>
            <h5 class="card__title">Date of Birth:</h5>
              <p class="card__content">
                <%= form.text_field :date_of_birth, class: 'form-control' %>
              </p>
            <h5 class="card__title">Bio:</h5>
              <p class="card__content">
                <%= form.text_field :bio, class: 'form-control' %>
              </p>
            </div>
        </div>
  
        <div class="col-xs-1 center-block" style="text-align:center">
          <%= form.submit :Submit, class: 'button button--primary' %>
        </div>

        <br>

        <div class="col-xs-1 center-block" style="text-align:center">
          <%= link_to 'Back', @employee_profile, class: 'button button--tertiary' %>
        </div>

      <% end %>
    </div>
  </article>
</section>